{#
| Variable    | Type    | Description                                                      |
|-------------|---------|------------------------------------------------------------------|
| url         | string  |                                                                  |
| image.url   | string  |                                                                  |
| image_1.url | string  |                                                                  |
| title       | ?string |                                                                  |
| position    | Int     | Sorting number start from zero                                   |
#}
<section class="s-block s-block--main-banner wide-placeholder">
    <div class="container3">
         {% if title %}
        <div class="s-block__title">
            <div class="right-side">
                <h2>{{ title }}</h2>
            </div>
        </div>
    {% endif %}

        {# Desktop Image #}
        <img width="1200" height="300" data-src="{{ image.url }}" fetchpriority="high" class="hidden sm:block" />

        {# Mobile Image #}
        <img width="1200" height="300" src="{{ image_1.url }}" fetchpriority="high" class="sm:hidden" />
    </div>
</section>
